server {
	listen [::]:443 ssl;
	listen 443 ssl;
	server_name gitea.{{ full_domain }};

	ssl_certificate {{ nginx_cert }};
	ssl_certificate_key {{ nginx_cert_key }};
	client_max_body_size 8M;

	location / {
		proxy_set_header Host $host;
		proxy_pass http://{{ docker_host }}:{{ gitea_http_port }};
	}
}
